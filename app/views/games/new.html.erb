<div class="d-flex align-items-center flex-column pb-4">

  <h1 class="pb-5">New Game</h1>

  <div class="d-flex align-items-center flex-column pb-4">
    <h1> Random letters: </h1>
    <h1 class="text-light bg-primary text-uppercase border border-3 p-2"> <%= @letters %> </h1>
  </div>

  <div>
    <form class="d-flex align-items-center flex-column" action="score" method="post" data-turbo="false">
      <%= hidden_field_tag :letters, @letters  %>
      <%= hidden_field_tag :time_taken, @time_taken %>
      <div class="mb-3 d-flex align-items-center flex-column">
        <label class="pb-4" for="user-word">Type the longest word you can</label>
        <input type="text" id="user-word" name="user-word">
      </div>
      <input class="btn btn-primary mt-3" type="submit" value="Submit word">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
  </div>

</div>
